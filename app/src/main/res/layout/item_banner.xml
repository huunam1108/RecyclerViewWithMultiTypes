<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/colorPrimary"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <namnh.com.recyclerviewwithmultitypes.pager.InfiniteViewPager
            android:id="@+id/pager"
            android:layout_width="@dimen/dp_330"
            android:layout_height="@dimen/dp_182"
            app:autoScrollInterval="2000"
            app:autoSmoothScroll="true"
            />
    </android.support.v7.widget.CardView>
    <namnh.com.recyclerviewwithmultitypes.pager.ViewPagerIndicator
        android:id="@+id/pager_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_11"
        app:deselectedDrawable="@drawable/circle_drawable"
        app:indicatorSpacing="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card"
        app:selectedColor="@color/dark_indigo"
        app:selectedDrawable="@drawable/circle_drawable_selected"
        />
</android.support.constraint.ConstraintLayout>
